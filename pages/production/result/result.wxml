<!--pages/production/result.wxml-->
<view style="height:50rpx">
  <button bindtap='returnTap' class='bt' style="background-image:url('{{returnimg}}');background-size:100% 100%;" hover-class='hover'></button>
</view>

<view class="center" style='width:100%;height:{{centerh}}rpx;position:relative;border:1rpx solid pink'>
  <!-- <canvas wx:if="{{production == 'C'}}" canvas-id="canvasC" class="canvas" style="width:200rpx; height:300rpx;"></canvas>
  <canvas wx:else canvas-id="canvasB" class="canvas" style="width:300rpx; height:300rpx;"></canvas> -->

  <block wx:if="{{production == 'C'}}">
    <image mode="aspectFill" src="{{rimg}}" style='transform:rotate(-90deg);width:300rpx;height:200rpx;position:relative;border:1rpx solid red'></image>
  </block>

  <block wx:else>
    <image mode="aspectFill" src="{{Bagimg}}" style='width:200rpx;height:300rpx;position:relative;border:1rpx solid red'></image>
    <image mode="aspectFill" src="{{rimg}}" style='width:100rpx;height:100rpx;position:absolute;left:37%;top:160rpx;border:1rpx solid black;'></image>
  </block>
</view>

<view style="height:70rpx;">
  <image class='img' mode="aspectFill" src="{{tipimg}}" style='width:300rpx;height:40rpx;float:right;'/>
</view>