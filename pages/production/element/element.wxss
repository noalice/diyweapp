/* pages/production/element/element.wxss */

page {
  display: flex;
  justify-content: center;
  background: #e0e0e0;
}

.button {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
}

/* 去掉按钮边框 */

button::after {
  border: 0;
  /* 去圆角 */
  border-radius: 0;
}

button {
  line-height: 60rpx;
  /* 确认按钮 没有文字，背景图片也不显示，将文字调成透明 */
  color:rgba(0,0,0,0);
  /* 点击按钮，文字会变默认颜色，将字体设置为0 */
  font-size: 0;
  /* 去圆角 */
  border-radius: 0;
}

.return {
  float: left;
  height: 100rpx;
  width: 100rpx;
  /* 图片暖色调 *//* filter:sepia(50%) */
}

.submit {
  float: right;
  height: 100rpx;
  width: 100rpx;
  /* 图片暖色调 *//* filter:sepia(50%) */
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}

.border {
  border: 2px solid #550508;
}
