/* pages/production/element/element.wxss */

.button{
  width: 100%;
  height:50rpx;
}

/* 去掉按钮边框 */
button::after {
  border: 0;
}
button{
  height:50rpx;
  
  /* 文字居中 */
  align-items: center;

  margin-top: 0rpx;
  background-color: #FFCC00;
  color: #FFF;
  display: flex;
}
.return{
  float: left;
}
.submit{
  float: right;
}
/* 按钮点击效果 */
.hover{
  background-color: pink;
}

.tip{
  text-align: center;
}

.center {
  display:flex;
  justify-content:center;
  align-items:center;

  margin-top:30px;
}
/* 画布边框 */
canvas{
  border: 1px solid #E0E0E0;
  background: #123456;
}

.bottom{
  width:100%;
  position: fixed;
  bottom:0rpx;
}
.border{
  border:3px solid black;
}