/* pages/production/element/element.wxss */

page{
  display: flex;
  justify-content: center;
  background: #e0e0e0;
}

.button {
  width: 100%;
  height: 100rpx;
}

/* 去掉按钮边框 */

button::after {
  border: 0;
}

button {
  height: 50rpx;
  /* 文字居中 */
  align-items: center;
  margin-top: 0rpx;
  background-color: #fc0;
  color: #fff;
  display: flex;
}

.return {
  float: left;
  height: 100rpx;
  width: 100rpx;
  /* 图片暖色调 */
  /* filter:sepia(50%) */
}

.submit {
  float: right;
  height: 100rpx;
  width: 100rpx;
  /* 图片暖色调 */
  /* filter:sepia(50%) */
}

/* 按钮点击效果 */

.hover {
  background-color: pink;
}

.tip {
  text-align: center;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 画布边框 */

canvas {
  border: 1px solid #e0e0e0;
  background: #123456;
}

.bottom {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}

.border {
  border: 2px solid black;
}

.clickcolor{
  background: #550508 !important;
}
  