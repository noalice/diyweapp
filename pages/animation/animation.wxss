/**animation.wxss**/

.wave {
  width: 750rpx;
  height: 800rpx;
}

/** 用户头像 **/
.headImage {
  /** border-radius 圆角边框
    长宽一样时，形状是一个圆**/
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
  /** 子元素在父级元素居中**/
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top:0;
  margin: auto;
}

.content {
  position: absolute;
  top: 416rpx;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #FFF;
  transform: translateX(-50%) translateY(-50%);
  border: 4rpx solid #FFF;
}

/** 波纹的父级元素 **/
.animate {
  width: 600rpx;
  height: 600rpx;
  position: absolute;
  top: 125rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.animate .w2 {
  /** 等待若干秒后开始动画 **/
  animation-delay: 1s;
}

.animate .w3 {
  animation-delay: 2s;
}

.animate .w4 {
  animation-delay: 3s;
}

.animate view {
  border: 4rpx solid #fff;
  background:#fff;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  /** animation-name ：keyframe 名称
      animation-duration ：完成动画所花费的时间
      animation-timing-function ：规定动画的速度曲线 （infinite匀速）
      animation-delay ：动画开始之前的延迟
      animation-iteration-count ：播放次数
      animation-direction ：规定是否应该轮流反向播放动画
      **/
  animation:swan 3s infinite;
  animation-name:swan;
  animation-duration:3s;
  animation-timing-function:infinite;
  /**animation-iteration-count:1;**/
}

@-webkit-keyframes swan {
  from {
    opacity: 1;
    width: 200rpx;
    height: 200rpx;
    top: 31%;
    left: 33%;
  }

  to {
    opacity: 0;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
}

page{
  height:100%;
}

/* 图片容器 */
.container{
    width:100%;
    height:100%;
    overflow: hidden;
    position: relative;
    z-index: 1;
}

/* 点击出现的圆 */
.ripple {
    background-color: rgba(255, 255, 255, 0);
    border-radius: 100%;
    border:1px solid rgba(255, 255, 255, 1);
    height:10px;
    width:10px;
    margin-top: -90px;
    position: absolute;
    -webkit-transform: scale(0);
    overflow: hidden
}
@-webkit-keyframes ripple {
    100% {
    -webkit-transform: scale(36);
    transform: scale(36);
    background-color: rgba(255,255,255,0.0);
     border:1px solid rgba(255, 255, 255, 0);
    }
}

/**
* 背景图动效
*/
.animtion-outer{
  opacity: 0;
  width: 100%;
  height: 100%;
  position:absolute;
  z-index: 5;
  top: 0px;
}
.outer{
  animation: fade-in 3s linear 0s;
  animation-fill-mode:forwards;
}
.animtion-inner{
  opacity: 0;
  width: 100%;
  height: 100%;
  position:absolute;
  z-index: 10;
  top: 0px;
}
.inner{
  animation: fade-in 3s linear 3s;
  animation-fill-mode:forwards;
}

.animate-finish{
    opacity: 1;
}

@keyframes fade-in {  
    from {opacity: 0;}
    to{opacity: 1;}
}  
@-webkit-keyframes fade-in {
    from {opacity: 0;}
    to{opacity: 1;}
}  
